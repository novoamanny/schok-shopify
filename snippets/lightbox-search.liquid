<aside id="searchpopup" class="mfp-hide" role="dialog">
  <div class="thb-close-text">{{ 'search.esc' | t }}</div>
	<div class="row">
		<div class="small-12">
			<div class="searchpopup-inner">
	      <form role="search" method="get" class="searchform" action="{{ routes.search_url }}">
	      	<fieldset>
	      		<input type="search" class="search-field" placeholder="{{ 'search.placeholder' | t | escape }}" value="{{ search.terms | replace: '*', '' }}" name="q" autocomplete="off">
						<input type="hidden" name="options[prefix]" value="last">
	      		<button type="submit" value="Search">{{ 'search.submit' | t }}</button>
	      	</fieldset>
	      </form>
				{% if settings.header_search_suggestions %}
	      <div class="thb-autocomplete-wrapper"></div>
				{% endif %}
			</div>
		</div>
	</div>
</aside>
