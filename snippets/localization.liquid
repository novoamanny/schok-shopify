{% if show_language_switcher or show_currency_switcher %}
	{% form 'localization' %}
		{%- if show_language_switcher -%}
		<div class="select">
			<select name="language_code" class="thb-language-code">
				{% for language in localization.available_languages %}
					<option value="{{ language.iso_code }}" {%- if language == localization.language %} selected="selected"{% endif %}>
						{{- language.endonym_name -}}
					</option>
				{% endfor %}
			</select>
		</div>
		{%- endif -%}
		{%- if show_currency_switcher -%}
		<div class="select">
			<select name="currency_code" class="thb-currency-code">
				{%- for country in localization.available_countries -%}
					<option value="{{ country.currency.iso_code }}" {%- if country == localization.country %} selected="selected"{% endif %}>
						{{ country.name }} ({{ country.currency.iso_code }} {{ country.currency.symbol }})
					</option>
				{%- endfor -%}
			</select>
		</div>
		{%- endif -%}
		<noscript>
			<button class="text-link">{{ 'general.update_country_region' | t }}</button>
		</noscript>
	{% endform %}
{% endif %}
