	                <span aria-hidden="true" style="width: {{ rating | escape }};"></span>
	              </div>
								<p class="rating-count">
									{{ 'products.product.reviews' | t: count: product.metafields.reviews.rating_count }}
	              </p>
							</div>
            {%- endif -%}
